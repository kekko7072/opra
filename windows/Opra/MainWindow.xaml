<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Opra.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Select PDF" 
                        Click="OnSelectPDFClicked"
                        Style="{StaticResource AccentButtonStyle}"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Visibility="{x:Bind ViewModel.HasPDF, Mode=OneWay}">
                    <SymbolIcon Symbol="Document" Foreground="Red" Margin="0,0,8,0"/>
                    <TextBlock Text="{x:Bind ViewModel.SelectedFileName, Mode=OneWay}" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Bind ViewModel.PageCountText, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           HorizontalAlignment="Center"
                           Visibility="{x:Bind ViewModel.HasPDF, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                    <TextBlock Text="PDF Reader" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="Settings" 
                        Click="OnSettingsClicked"
                        Style="{StaticResource DefaultButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.HasPDF, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- PDF Viewer Placeholder -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="20">
                <Grid>
                    <TextBlock Text="PDF Viewer" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </Grid>
            </Border>

            <!-- Text Display Panel -->
            <Border Grid.Column="1" 
                    Width="400" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Text Panel Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            Padding="12,8">
                        <Grid>
                            <TextBlock Text="Extracted Text" 
                                       FontWeight="SemiBold"/>
                        </Grid>
                    </Border>

                    <!-- Text Content -->
                    <ScrollViewer Grid.Row="1" 
                                  Padding="12"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{x:Bind ViewModel.ExtractedText, Mode=OneWay}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   IsTextSelectionEnabled="True"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Welcome Screen -->
        <Grid Grid.Row="1" 
              Visibility="{x:Bind ViewModel.HasPDF, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="20">
                <SymbolIcon Symbol="DocumentAdd" 
                           FontSize="80" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="Select a PDF file to begin" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Press Ctrl+O or click 'Select PDF' to choose a file" 
                           FontSize="16"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Audio Control Bar -->
        <Border Grid.Row="2" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Visibility="{x:Bind ViewModel.HasPDF, Mode=OneWay}">
            <Grid Padding="20,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Play/Pause Button -->
                <Button Grid.Column="0" 
                        Click="OnPlayPauseClicked"
                        Style="{StaticResource CircleButtonStyle}"
                        Width="40" 
                        Height="40"
                        Margin="0,0,20,0">
                    <SymbolIcon Symbol="{x:Bind ViewModel.PlayButtonSymbol, Mode=OneWay}"/>
                </Button>

                <!-- Stop Button -->
                <Button Grid.Column="1" 
                        Content="Stop" 
                        Click="OnStopClicked"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="0,0,20,0"/>

                <!-- Speed Control -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <Grid>
                        <TextBlock Text="Speed" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.SpeedText, Mode=OneWay}" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <Slider Value="{x:Bind ViewModel.SpeechRate, Mode=TwoWay}" 
                            Minimum="0.1" 
                            Maximum="1.0" 
                            StepFrequency="0.05"
                            Margin="0,4,0,0"/>
                    <Grid>
                        <TextBlock Text="Slow" 
                                   FontSize="10" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Fast" 
                                   FontSize="10" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <!-- Voice Selection -->
                <ComboBox Grid.Column="3" 
                          ItemsSource="{x:Bind ViewModel.AvailableVoices, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedVoice, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          Width="200"
                          Margin="0,0,20,0"/>

                <!-- Status -->
                <TextBlock Grid.Column="4" 
                           Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" 
                           VerticalAlignment="Center"
                           Foreground="{x:Bind ViewModel.StatusColor, Mode=OneWay}"/>

                <!-- Progress -->
                <StackPanel Grid.Column="5" 
                           HorizontalAlignment="Right"
                           Visibility="{x:Bind ViewModel.IsSpeaking, Mode=OneWay}">
                    <ProgressBar Value="{x:Bind ViewModel.Progress, Mode=OneWay}" 
                                Width="150" 
                                Margin="0,0,0,4"/>
                    <TextBlock Text="{x:Bind ViewModel.ProgressText, Mode=OneWay}" 
                               FontSize="10" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>